        <Label x:Name="label_Copy1" Content="Имя" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="96" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
        <Label x:Name="label_Copy2" Content="Дата рождения" HorizontalAlignment="Left" Height="26" Margin="10,72,0,0" VerticalAlignment="Top" Width="96" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
        <Label x:Name="label_Copy3" Content="Телефон" HorizontalAlignment="Left" Height="26" Margin="10,103,0,0" VerticalAlignment="Top" Width="96" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
