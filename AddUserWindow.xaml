        <TextBox x:Name="tBoxName" Height="26" Margin="111,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" TabIndex="0"/>
        <TextBox x:Name="tBoxSurname" Height="26" Margin="111,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" TabIndex="1"/>
        <TextBox x:Name="tBoxEmail" HorizontalAlignment="Left" Height="26" Margin="111,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" VerticalContentAlignment="Center" TabIndex="4"/>
        <TextBox x:Name="tBoxPhone" HorizontalAlignment="Left" Height="26" Margin="111,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" VerticalContentAlignment="Center" TabIndex="3"/>
        <DatePicker x:Name="dPickerBirthDate" Margin="111,72,10,0" VerticalAlignment="Top" Height="26" TabIndex="2"/>
        <Button x:Name="button" Content="Добавить" Margin="83,185,89,0" VerticalAlignment="Top" Height="37" Click="button_Click" TabIndex="5"/>

