        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="label" Content="Имя" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="96" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
